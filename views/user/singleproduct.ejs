		<script>
			function addtowishlist(productID) {
				const wishlistButton = $(`#removewishlist-${productID}`);

				$.ajax({
					url: '/addtowishlist',
					data: { productID: productID },
					method: 'POST',
					success: (response) => {
						if (response.addedToWishList) {
							wishlistButton.text('Remove From Wishlist');
							$('a[href="/wishlist"]').attr('data-notify', response.count + 1);
						} else if (response.alreadyExist) {
							wishlistButton.text('Add to Wishlist');
							$('a[href="/wishlist"]').attr('data-notify', response.count - 1);
						} else {
							window.location.href = "/login";
						}
					}
				});
			}
