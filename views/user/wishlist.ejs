<% if(count > 0){ %>
<div class="container">
    <div class="row">
        <div class="col-lg-10   m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
                <div class="wrap-table-shopping-cart">
                    <table class="table-shopping-cart">
                        <tr class="table_head">
                            <th class="column-0">No</th>
                            <th class="column-1">Product</th>
                            <th class="column-3">Name</th>
                            <th class="column-3">Price</th>
                            <th class="column-3">Action</th>
                            <th class="column-3">Remove</th>
                        </tr>
                        <% for(let i=0 ; i< products.length; i++) {%>
                            <tr class="table_row">
                                <td class="column-0">
                                    <%= i+1 %>
                                </td>
                                <td class="column-1">
                                    <div class="how-itemcart1">
                                        <img src="/productimages/<%= products[i].image[0] %>" alt="IMG">
                                    </div>
                                </td>
                                <td class="column-3">
                                    <%= products[i].name %>
                                </td>
                                <td class="column-3">
                                    <%= products[i].price %>
                                </td>
                                <td class="column-3" >
                                    <a href="/addcart?id=<%=  products[i]._id %>"><button class="btn btn-dark">Move to Cart</button></a>
                                </td>
                                <td class="column-3">
                                    <a href="/removewishlist?id=<%=products[i]._id %>"><button class="btn btn-dark">Remove</button></a>
                                </td>
                            </tr>
                            <% } %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
